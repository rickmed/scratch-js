{
  "version": "0.2.0",
  "configurations": [
     {
       "name": "TS Current file",
        "smartStep": true,
        "sourceMaps": true,
        "showAsyncStacks": true,
        "type": "node",
        "runtimeArgs": ["--no-warnings", "--loader", "/usr/local/bin/tsx"],
        "request": "launch",
        "program": "${file}",
        "skipFiles": ["<node_internals>/**", "**/node_modules/**"],
     }
  ]
}